        <div class="col-sm-6">
          <ul class="messages">
          <% let grandTotal = 0  %>
          <% for(var i=0; i<messages.length; i++) {%>
          <% grandTotal += messages[i].total %>
            <li class="message">
              <br><span><strong>Item: </strong><span class="item"><%= messages[i].name %></span></span></br>
              <br><span><strong>Price Tag: </strong>$<span class="price"><%= messages[i].msg %></span></span></br>
              <!-- <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
        </div>

            <h2>Throw It In The Bag</h2>
            <% if (user.local.email) { %>
              <form action="/messages" method="POST">
                <input type="text" placeholder="Item" name="name">
                <input type="text" placeholder="Price $$$" name="msg">
                <button type="submit">Submit</button>
              </form>
            <% } %>

        <section class="cart">
          <p>Grand Total</p>
          <h3 id="totalCart">
            <span><%= totalCart %></span> USD
          </h3>
        </section>

</div>



<script src="main.js"></script>

</body>
</html>
